{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "outDir": "./lib/",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["dist", "lib", "node_modules"]
}
