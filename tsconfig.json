{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // so we can debug inside vs code
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "outDir": "./lib/",
    // enables custom paths on import. 
    // IMPORTANT!: need to be defined in webpack alias also and in jest.config so module resolution works
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@containers/*": [
        "src/containers/*"
      ],
      "@actions/*": [
        "src/actions/*"
      ],
      "@reducers/*": [
        "src/reducers/*"
      ]
    },
    // https://github.com/Microsoft/TypeScript/issues/25260, problem with 2.9. TS and some typings
    "keyofStringsOnly": true,
  },
  "exclude": [
    "dist",
    "lib",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": false,
    "emitRequireType": false,
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": "last 2 versions, ie 11",
            "modules": false
          }
        ]
      ]
    },
    "babelCore": "@babel/core",
  }
}